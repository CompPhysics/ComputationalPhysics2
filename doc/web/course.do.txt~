pub_url = 'http://compphysics.github.io/ComputationalPhysics2/doc/pub'
published = ['intro', 'basicMB', 'vmc', 'para', 'cg', 'NeuralNet',]
chapters = {
 'intro': 'Introduction to computational physics',
