    double E;
    int n1, l1,s1, n2, l2, s2, n3, l3, s3, n4, l4, s4;
    int nInteractions = 0;
    int nStates = states.size();
    ... // statements specific to the function to compute 

}

basis::~basis() {
}


\end{lstlisting}
}





